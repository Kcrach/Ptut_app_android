<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_intitule"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="16dp"
        android:text="Inititule :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        android:text="Date :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_intitule" />

    <TextView
        android:id="@+id/textView_montant"
        android:layout_width="67dp"
        android:layout_height="18dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        android:text="Montant  :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_date" />

    <Spinner
        android:id="@+id/spinnerDR"
        android:layout_width="134dp"
        android:layout_height="25dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_montant" />
</android.support.constraint.ConstraintLayout>